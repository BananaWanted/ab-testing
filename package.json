{
    "name": "root",
    "private": true,
    "devDependencies": {
        "lerna": "^3.20.2",
        "@types/jest": "^24.0.22",
        "@types/node": "^12.12.7",
        "jest": "^24.9.0",
        "ts-jest": "^24.1.0",
        "typescript": "^3.7.2",
        "prettier": "^1.19.1",
        "@typescript-eslint/eslint-plugin": "^2.6.1",
        "@typescript-eslint/parser": "^2.6.1",
        "coveralls": "^3.0.7",
        "husky": "^3.0.9",
        "lint-staged": "^9.4.3",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^6.5.0",
        "eslint-formatter-friendly": "^7.0.0",
        "eslint-plugin-prettier": "^3.1.1"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "git add"
        ],
        "*.json": [
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "scripts": {
        "test": "jest",
        "format": "prettier --write \"**/*.ts\"  \"!**/lib/**\"",
        "lint": "eslint \"packages/**/{src,__tests__}/**/*.ts\" -f eslint-formatter-friendly"
    },
    "jest": {
        "testEnvironment": "node"
    },
    "repository": "https://github.com/appannie/ab-testing.git",
    "license": "BSD-2-Clause-FreeBSD"
}
